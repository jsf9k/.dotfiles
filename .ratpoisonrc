# No startup message
startup_message off

addhook key banish

set border 2
set bgcolor green
set fwcolor green

# Commonly used apps
bind a exec sh /usr/share/ratpoison/ratdate.sh
bind b exec uzbl-tabbed
bind B exec opera
bind c exec urxvt
bind e exec emacs
bind m exec thunderbird
bind x exec xlock

# Audio controls
definekey top XF86AudioRaiseVolume exec amixer -q set Master 5+ unmute; amixer -q set "Headphone (null)" 5+ unmute; ratpoison -c "echo Volume +5"
definekey top XF86AudioLowerVolume exec amixer -q set Master 5- unmute; amixer -q set "Headphone (null)" 5- unmute; ratpoison -c "echo Volume -5"
definekey top XF86AudioMute exec amixer -q set Master toggle; amixer -q set "Headphone (null)" toggle; ratpoison -c "echo [ MUTE ]"
bind greater exec amixer -q set Master 5+ unmute; amixer -q set "Headphone (null)" 5+ unmute; ratpoison -c "echo Volume +5"
bind less exec amixer -q set Master 5- unmute; amixer -q set "Headphone (null)" 5- unmute; ratpoison -c "echo Volume -5"
bind l exec amixer -q set Master toggle; amixer -q set "Headphone (null)" toggle; ratpoison -c "echo [ MUTE ]"

# Music controls
#definekey top XF86AudioPlay exec urxvt -e emacsclient -e "(emms-pause)"; ratpoison -c "echo toggle EMMS"
#definekey top XF86AudioPrev exec urxvt -e emacsclient -e "(emms-previous)"; ratpoison -c "echo EMMS << Previous song"
#definekey top XF86AudioNext exec urxvt -e emacsclient -e "(emms-next)"; ratpoison -c "echo EMMS >> Next song"
