CanonicalizeHostname yes
CanonicalizeMaxDots 0

Host localhost
  User jeremy_frasier

Host *.bod *.cyhy *.mgmt *.pca
  StrictHostKeyChecking no  
  User jeremy.frasier
  UserKnownHostsFile /dev/null

Host bastion.*.bod bastion.*.cyhy bastion.*.mgmt *.pca
  HostName %h.ncats.cyber.dhs.gov

Host bastion.*.cyhy
  LocalForward 8834 vulnscan1:8834
  LocalForward 8835 vulnscan2:8834
  LocalForward 0.0.0.0:27017 database1:27017
  LocalForward 4200 dashboard:4200
  LocalForward 5000 dashboard:5000

Host !bastion.*.bod *.bod !bastion.*.cyhy *.cyhy !bastion.*.mgmt *.mgmt
  ProxyCommand ssh -W $(sed "s/^\([^.]*\)\..*$/\1/" <<< %h):22 $(sed s/^[^.]*/bastion/ <<< %h)

Host *
  # https://stribika.github.io/2015/01/04/secure-secure-shell.html
  ChallengeResponseAuthentication no
  Ciphers chacha20-poly1305@openssh.com,aes256-gcm@openssh.com,aes256-ctr
  ControlMaster auto
  ControlPath /tmp/ssh-%r@%h:%p
  ControlPersist 5m
  ForwardAgent yes
  ForwardX11 no
  GSSAPIAuthentication yes
  GSSAPIDelegateCredentials yes
  HashKnownHosts yes
  HostKeyAlgorithms ssh-ed25519-cert-v01@openssh.com,ssh-rsa-cert-v01@openssh.com,ssh-ed25519,ssh-rsa
  KexAlgorithms curve25519-sha256@libssh.org,diffie-hellman-group-exchange-sha256
  MACs hmac-sha2-512-etm@openssh.com,hmac-sha2-256-etm@openssh.com,umac-128-etm@openssh.com,hmac-sha2-512,hmac-sha2-256,umac-128@openssh.com
  PasswordAuthentication no
  PubkeyAuthentication yes
  SendEnv LANG
  ServerAliveCountMax 3
  ServerAliveInterval 120
  VisualHostKey yes
  VerifyHostKeyDNS ask
